{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Choropleth map showing Wales population density at MSOA level from 2021 Census data using logarithmic orange scale.",
  "title": "Wales Population Density by MSOA (2021 Census)",
  "width": 350,
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/refs/heads/main/MappingWorkshop/geo_data/Wales_MSOA.topojson",
    "format": {"type": "topojson", "feature": "data"}
  },
  "transform": [
    {
      "lookup": "properties.MSOA21CD",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/refs/heads/main/MappingWorkshop/series_data/wales_pop_density_msoa.csv"
        },
        "key": "geo_id",
        "fields": ["value"]
      }
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "white",
    "strokeWidth": 0.2
  },
  "encoding": {
    "color": {
      "field": "value",
      "type": "quantitative",
      "scale": {
        "scheme": "oranges",
        "type": "log"
      },
      "title": "Population Density (people per kmÂ²)"
    },
    "tooltip": [
      {"field": "properties.MSOA21NM", "type": "nominal", "title": "MSOA Name"},
      {"field": "value", "type": "quantitative", "title": "Pop. Density", "format": ".1f"},
      {"field": "properties.MSOA21CD", "type": "nominal", "title": "MSOA Code"}
    ]
  },
  "projection": {
    "type": "mercator"
  }
}